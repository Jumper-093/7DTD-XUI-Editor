<Window x:Class="XuiEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XuiEditor"
        mc:Ignorable="d"
        Title="7DTD XUI Editor"
        Height="450"
        Width="800">
        

    <Grid>

        <!-- ================= ZEILEN ================= -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ================= SPALTEN ================= -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>

        <!-- ================= TOOLBAR ================= -->
        <Border Grid.Row="0"
            Grid.ColumnSpan="3"
            Background="#1e1e1e"
            Padding="5">

            <StackPanel Orientation="Horizontal">

                <CheckBox x:Name="SnapCheckBox"
                      Content="Snap to Grid"
                      IsChecked="True"
                      Foreground="White"
                      Margin="0,0,15,0"/>

                <TextBlock Text="Grid Size:"
                       Foreground="White"
                       VerticalAlignment="Center"
                       Margin="0,0,5,0"/>

                <TextBox x:Name="GridSizeBox"
                     Width="50"
                     Text="10"/>
            </StackPanel>
        </Border>

        <!-- ================= ELEMENT LIST ================= -->
        <Border Grid.Row="1"
            Grid.Column="0"
            Background="#1e1e1e"
            Padding="5">

            <StackPanel>

                <TextBlock Text="Elements"
                       Foreground="White"
                       FontWeight="Bold"
                       Margin="0,0,0,5"/>

                <Button Content="+ Rectangle"
                    Margin="0,0,0,5"
                    Click="AddRectangleButton_Click"/>

                <Button Content="- Delete"
                    Margin="0,0,0,5"
                    Click="DeleteElementButton_Click"/>

                <Button Content="Export XUI"
                    Margin="0,10,0,0"
                    Click="ExportButton_Click"/>
                
                <Button Content="Import XUI"
                    Margin="0,5,0,0"
                    Click="ImportButton_Click"/>

                <ListBox x:Name="ElementsList"/>
            </StackPanel>
        </Border>

        <!-- ================= CANVAS ================= -->
        <ScrollViewer x:Name="EditorScrollViewer"
              Grid.Row="1"
              Grid.Column="1"
              HorizontalScrollBarVisibility="Auto"
              VerticalScrollBarVisibility="Auto">

            <Canvas x:Name="EditorCanvas"
        Width="2000"
        Height="2000"
        Background="#333333"
        Focusable="True"
        PreviewKeyDown="Canvas_PreviewKeyDown"
        MouseLeftButtonDown="Canvas_MouseLeftButtonDown">

                <Rectangle x:Name="TestElement"
                       Width="200"
                       Height="100"
                       Fill="DarkSlateBlue"
                       Canvas.Left="100"
                       Canvas.Top="100"
                       MouseLeftButtonDown="TestElement_MouseLeftButtonDown"
                       MouseLeftButtonUp="TestElement_MouseLeftButtonUp"
                       MouseMove="TestElement_MouseMove"/>

                <Rectangle Width="150"
                       Height="80"
                       Fill="DarkRed"
                       Canvas.Left="100"
                       Canvas.Top="200"
                       MouseLeftButtonDown="TestElement_MouseLeftButtonDown"
                       MouseLeftButtonUp="TestElement_MouseLeftButtonUp"
                       MouseMove="TestElement_MouseMove"/>
            </Canvas>
        </ScrollViewer>

        <!-- ================= PROPERTIES ================= -->
        <Border Grid.Row="1"
            Grid.Column="2"
            Background="#222"
            Padding="10">

            <StackPanel>

                <TextBlock Text="Properties"
                       Foreground="White"
                       FontSize="16"
                       Margin="0,0,0,10"/>

                <TextBlock Text="Name" Foreground="White"/>
                <TextBox x:Name="NameBox" Margin="0,0,0,10"/>

                <TextBlock Text="X" Foreground="White"/>
                <TextBox x:Name="PosXBox"/>

                <TextBlock Text="Y" Foreground="White"/>
                <TextBox x:Name="PosYBox"/>

                <TextBlock Text="Width" Foreground="White"/>
                <TextBox x:Name="WidthBox"/>

                <TextBlock Text="Height" Foreground="White"/>
                <TextBox x:Name="HeightBox"/>
            </StackPanel>
        </Border>

    </Grid>

</Window>
